<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/definitionLayout2"
    android:layout_margin="20dp"
    android:background="#ffffff"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/definitionHeader2"
        android:textStyle="bold"
        android:textSize="14pt" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audioButton2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/definitionText2"
        app:layout_constraintStart_toEndOf="@id/definitionHeader2"
        android:text="@string/audio"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/definitionHeader2"
        android:id="@+id/definitionText2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/definitionExample2"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/definitionText2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/authorDate2"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/definitionExample2" />

</androidx.constraintlayout.widget.ConstraintLayout>